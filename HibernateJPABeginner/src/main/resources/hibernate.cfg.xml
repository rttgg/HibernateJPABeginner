<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mariadb://localhost:3306/hibernatedemopractice?createDatabaseIfNotExist=true</property>
        <property name="connection.username">root</property>
        <property name="connection.password">0922</property>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MariaDB106Dialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
<!--        <property name="hibernate.use_sql_comments">true</property>-->
        <property name="hbm2ddl.auto">create-drop</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">10</property>
        <!-- each session runs in a thread (thread-safe) -->
        <property name="current_session_context_class">thread</property>

        <mapping class="com.hibernate.models.Employee" />
        <mapping class="com.hibernate.models.Address" />
        <mapping class="com.hibernate.models.Department" />


    </session-factory>
</hibernate-configuration>